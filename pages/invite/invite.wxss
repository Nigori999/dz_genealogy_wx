/* 邀请页面样式 */
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
  background-color: var(--color-background);
}

.page-header {
  background-color: var(--color-primary);
  color: var(--color-white);
  padding: 40rpx 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.content-panel {
  padding: 30rpx 20rpx;
}

/* 卡片通用样式 */
.card {
  background-color: var(--color-white);
  border-radius: var(--radius-md);
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: var(--shadow-card);
}

/* 族谱信息 */
.genealogy-info {
  text-align: center;
}

.genealogy-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 10rpx;
}

.genealogy-desc {
  font-size: 28rpx;
  color: var(--color-text-medium);
}

/* 邀请操作 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 20rpx;
}

.invite-desc {
  font-size: 28rpx;
  color: var(--color-text-medium);
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.invite-buttons {
  display: flex;
  justify-content: space-between;
}

.btn-generate, .btn-seats {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-pill);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-generate {
  background-color: var(--color-accent);
  color: var(--color-white);
  margin-right: 20rpx;
}

.btn-seats {
  background-color: var(--color-primary-light);
  color: var(--color-white);
}

.btn-generate text, .btn-seats text {
  margin: 0 6rpx;
}

/* 邀请记录 */
.records-list {
  margin-top: 10rpx;
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--color-border);
}

.record-item:last-child {
  border-bottom: none;
}

.record-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-code {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-dark);
}

.code-copy {
  margin-left: 10rpx;
  padding: 6rpx 12rpx;
  background-color: var(--color-background);
  border-radius: var(--radius-pill);
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: var(--color-text-light);
}

.record-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-pill);
  background-color: rgba(var(--color-success-rgb), 0.1);
  color: var(--color-success);
}

.record-status.expired {
  background-color: rgba(158, 158, 158, 0.1);
  color: var(--color-text-light);
}

/* 加载更多提示 */
.load-more, .load-all {
  text-align: center;
  padding: 20rpx 0 0;
  font-size: 24rpx;
  color: var(--color-text-light);
}

/* 邀请说明 */
.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
}

.tip-content text {
  font-size: 28rpx;
  color: var(--color-text-medium);
  line-height: 1.5;
  margin-bottom: 10rpx;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.dialog-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: var(--color-white);
  border-radius: var(--radius-md);
  overflow: hidden;
  z-index: 101;
  box-shadow: var(--shadow-modal);
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--color-background);
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-dark);
}

.dialog-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-background);
  border-radius: 50%;
}

.dialog-content {
  padding: 30rpx;
}

.invite-code-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: var(--color-background);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.invite-code {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-dark);
  flex: 1;
  word-break: break-all;
}

.code-copy {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: var(--color-primary);
  border-radius: 30rpx;
  color: var(--color-white);
  margin-left: 20rpx;
}

.code-copy text {
  margin: 0 4rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: var(--color-border);
}

.divider-text {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: var(--color-text-light);
}

.invite-url-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.invite-url {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  word-break: break-all;
}

.url-copy {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: var(--color-primary);
  border-radius: 30rpx;
  color: var(--color-white);
  margin-left: 20rpx;
}

.url-copy text {
  margin: 0 4rpx;
}

.dialog-footer {
  display: flex;
  padding: 0 30rpx 30rpx;
}

.btn-share, .btn-qrcode {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-pill);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-share {
  background-color: var(--color-success);
  color: #fff;
  margin-right: 20rpx;
}

.btn-qrcode {
  background-color: var(--color-primary);
  color: var(--color-white);
}

.btn-share text, .btn-qrcode text {
  margin: 0 6rpx;
}

/* 二维码弹窗 */
.qrcode-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.qrcode-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  z-index: 101;
}

.qrcode-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.qrcode-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.qrcode-content {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.qrcode-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.qrcode-footer {
  padding: 0 30rpx 30rpx;
}

.btn-save {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-save text {
  margin: 0 6rpx;
}

/* Loading样式 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid var(--color-accent);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.dialog-button {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-pill);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-white);
}