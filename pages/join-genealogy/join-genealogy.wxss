/* 加入族谱页面样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: var(--color-background);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.container::before {
  content: "";
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(109, 76, 65, 0.08) 0%, rgba(109, 76, 65, 0) 70%);
  z-index: 0;
}

.container::after {
  content: "";
  position: absolute;
  bottom: -150rpx;
  left: -150rpx;
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(216, 67, 21, 0.05) 0%, rgba(216, 67, 21, 0) 70%);
  z-index: 0;
}

/* 页面头部 - 简化后的样式 */
.page-header {
  background-image: var(--gradient-header);
  padding: 30rpx;
  color: #fff;
  position: relative;
  z-index: 1;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 38rpx;
  font-weight: 600;
}

.header-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: rotateIcon 10s infinite linear;
}

@keyframes rotateIcon {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.icon-genealogy {
  width: 36rpx;
  height: 36rpx;
  position: relative;
}

.icon-genealogy::before {
  content: "";
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  border: 2.5rpx solid #fff;
  border-radius: 50%;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.icon-genealogy::after {
  content: "";
  position: absolute;
  width: 2.5rpx;
  height: 18rpx;
  background-color: #fff;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

/* 主要内容区域 */
.content-panel {
  flex: 1;
  padding: 25rpx 20rpx 30rpx;
  position: relative;
  z-index: 1;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  margin: 40rpx 0;
}

.loading-spinner {
  width: 70rpx;
  height: 70rpx;
  border: 3rpx solid rgba(109, 76, 65, 0.2);
  border-top: 3rpx solid var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-medium);
}

/* 表单卡片 */
.join-form {
  background-color: #fff;
  border-radius: var(--radius-md);
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 25rpx;
  position: relative;
  overflow: hidden;
  transform: translateY(60rpx);
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.join-form.animated {
  transform: translateY(0);
  opacity: 1;
}

.join-form::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background-image: var(--gradient-button);
}

/* 表单头部 */
.form-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(216, 67, 21, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 25rpx;
  animation: pulse 3s infinite ease-in-out;
}

.icon-invite {
  position: relative;
  width: 70rpx;
  height: 70rpx;
}

.icon-invite::before {
  content: "";
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 3rpx solid var(--color-primary);
  border-radius: 12rpx;
  transform: rotate(45deg);
  left: 5rpx;
  top: 5rpx;
}

.icon-invite::after {
  content: "";
  position: absolute;
  width: 30rpx;
  height: 20rpx;
  border-right: 3rpx solid var(--color-primary);
  border-bottom: 3rpx solid var(--color-primary);
  transform: rotate(45deg);
  left: 19rpx;
  top: 22rpx;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: var(--color-text-dark);
}

.form-desc {
  font-size: 28rpx;
  color: var(--color-text-light);
  text-align: center;
  line-height: 1.5;
}

/* 邀请码输入框 */
.invite-code-input {
  margin: 30rpx 0;
  position: relative;
  display: flex;
  align-items: center;
}

.input-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.icon-key {
  width: 36rpx;
  height: 36rpx;
  position: relative;
}

.icon-key::before {
  content: "";
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border: 2.5rpx solid var(--color-primary);
  border-radius: 50%;
  top: 0;
  left: 0;
}

.icon-key::after {
  content: "";
  position: absolute;
  width: 20rpx;
  height: 10rpx;
  border-top: 2.5rpx solid var(--color-primary);
  border-right: 2.5rpx solid var(--color-primary);
  border-bottom: 2.5rpx solid var(--color-primary);
  top: 16rpx;
  left: 8rpx;
}

.invite-code-input input {
  width: 100%;
  height: 90rpx;
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-sm);
  padding: 0 70rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  transition: all 0.3s;
  color: var(--color-text-dark);
  background-color: rgba(248, 245, 242, 0.5);
}

.invite-code-input input:focus {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3rpx rgba(109, 76, 65, 0.2);
}

.invite-code-input .input-error {
  border-color: var(--color-error);
  animation: shake 0.4s linear;
}

.input-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.1);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  z-index: 2;
  font-weight: bold;
  transition: all 0.2s;
}

.input-clear-hover {
  background-color: rgba(0, 0, 0, 0.2);
  transform: translateY(-50%) scale(1.1);
}

@keyframes shake {
  0%, 100% {transform: translateX(0);}
  10%, 30%, 50%, 70%, 90% {transform: translateX(-10rpx);}
  20%, 40%, 60%, 80% {transform: translateX(10rpx);}
}

/* 错误提示 */
.error-message {
  color: var(--color-error);
  font-size: 26rpx;
  margin-bottom: 25rpx;
  padding: 16rpx 20rpx;
  background-color: rgba(220, 53, 69, 0.1);
  border-radius: var(--radius-sm);
  animation: fadeIn 0.3s;
  display: flex;
  align-items: center;
}

.error-message::before {
  content: "!";
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  background-color: var(--color-error);
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 30rpx;
  margin-right: 12rpx;
  font-weight: bold;
}

/* 成功提示 */
.success-message {
  color: var(--color-success);
  font-size: 28rpx;
  margin-bottom: 25rpx;
  text-align: center;
  padding: 16rpx 20rpx;
  background-color: rgba(40, 167, 69, 0.1);
  border-radius: var(--radius-sm);
  font-weight: 500;
  animation: fadeIn 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.success-icon {
  width: 32rpx;
  height: 32rpx;
  background-color: var(--color-success);
  border-radius: 50%;
  margin-right: 12rpx;
  position: relative;
  animation: bounceIn 0.5s;
}

@keyframes bounceIn {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
  }
}

.success-icon::before {
  content: "";
  position: absolute;
  top: 45%;
  left: 25%;
  width: 16rpx;
  height: 8rpx;
  border-left: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(-45deg);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 按钮区域 */
.action-buttons {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.btn-primary {
  background-image: var(--gradient-button);
  color: #fff;
  border: none;
  border-radius: var(--radius-pill);
  height: 90rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: var(--shadow-button);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
  padding: 0;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.btn-arrow {
  width: 14rpx;
  height: 14rpx;
  border-top: 2.5rpx solid #fff;
  border-right: 2.5rpx solid #fff;
  transform: rotate(45deg);
  margin-left: 12rpx;
  position: relative;
  opacity: 0.9;
  animation: arrowMove 1.5s infinite ease-in-out;
}

@keyframes arrowMove {
  0%, 100% {
    transform: rotate(45deg) translateX(0);
  }
  50% {
    transform: rotate(45deg) translateX(6rpx);
  }
}

.btn-primary::after {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: all 0.5s;
}

.btn-primary:active::after {
  left: 100%;
}

.btn-primary-hover {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 4rpx rgba(216, 67, 21, 0.3);
}

.btn-primary[disabled] {
  background: rgba(216, 67, 21, 0.5);
  color: rgba(255, 255, 255, 0.8);
  box-shadow: none;
}

/* 卡片容器 */
.cards-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

/* 提示卡片 */
.tips-card {
  background-color: #fff;
  border-radius: var(--radius-md);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transform: translateY(60rpx);
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.tips-card.animated {
  transform: translateY(0);
  opacity: 1;
}

.card-header {
  padding: 20rpx 24rpx;
  background-color: rgba(109, 76, 65, 0.05);
  position: relative;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text-dark);
  display: flex;
  align-items: center;
}

.tips-title::before {
  content: "";
  display: inline-block;
  width: 6rpx;
  height: 28rpx;
  background-color: var(--color-accent);
  margin-right: 12rpx;
  border-radius: 3rpx;
}

.card-content {
  padding: 24rpx;
}

.tips-item {
  font-size: 26rpx;
  color: var(--color-text-medium);
  margin-bottom: 16rpx;
  line-height: 1.5;
  padding-left: 24rpx;
  position: relative;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.tips-item::before {
  content: "";
  position: absolute;
  left: 6rpx;
  top: 14rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: var(--color-primary-light);
}

/* 帮助卡片 */
.help-card {
  background-color: #fff;
  border-radius: var(--radius-md);
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border-left: 5rpx solid var(--color-warning);
  transform: translateY(60rpx);
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.help-card.animated {
  transform: translateY(0);
  opacity: 1;
}

.help-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text-dark);
  margin-bottom: 16rpx;
}

.help-text {
  font-size: 26rpx;
  color: var(--color-text-medium);
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.help-link {
  font-size: 26rpx;
  color: var(--color-accent);
  padding: 10rpx 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-pill);
  background-color: rgba(216, 67, 21, 0.1);
  font-weight: 500;
  transition: all 0.2s;
}

.help-link::after {
  content: "→";
  margin-left: 8rpx;
  transition: transform 0.3s;
}

.help-link-hover {
  background-color: rgba(216, 67, 21, 0.2);
}

.help-link-hover::after {
  transform: translateX(6rpx);
}