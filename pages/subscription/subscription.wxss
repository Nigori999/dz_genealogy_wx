/* 订阅服务页面样式 */
.container {
  padding: 24rpx;
  background-color: #f8f8f8;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.card-header::after {
  content: '';
  position: absolute;
  left: 0;
  top: 24rpx;
  bottom: 24rpx;
  width: 6rpx;
  background: linear-gradient(to bottom, #6D4C41, #A1887F);
  border-radius: 0 3rpx 3rpx 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 14rpx;
}

.card-content {
  padding: 24rpx 30rpx;
}

/* 当前订阅信息 */
.current-plan {
  margin-bottom: 24rpx;
}

.plan-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.plan-features {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plan-feature {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8rpx 0;
}

.feature-label {
  color: #666;
  font-size: 28rpx;
  width: 180rpx;
}

.feature-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 自定义订阅 */
.custom-subscription {
  margin-bottom: 24rpx;
}

.subscription-item {
  margin-bottom: 30rpx;
  border-bottom: 1rpx dashed #f0f0f0;
  padding-bottom: 20rpx;
}

.subscription-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.item-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.item-title-container {
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.item-description {
  font-size: 22rpx;
  color: #999;
  line-height: 1.3;
}

.item-price {
  font-size: 26rpx;
  color: #D84315;
  font-weight: 500;
  padding: 4rpx 12rpx;
  background-color: rgba(216, 67, 21, 0.05);
  border-radius: 20rpx;
}

.item-content {
  margin: 20rpx 0;
}

.item-content.compact {
  margin: 12rpx 0;
}

.count-selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
}

.count-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 56rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #f8f8f8;
  font-size: 32rpx;
  color: #333;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.count-btn:active {
  background-color: #f0f0f0;
  transform: scale(0.97);
}

.count-input {
  flex: 1;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
  width: 120rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  margin: 0 1rpx;
  background-color: #fff;
}

.unit {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.item-subtotal {
  font-size: 24rpx;
  color: #D84315;
  text-align: right;
  font-weight: 500;
}

/* 快速选项 */
.quick-options {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.quick-option {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  flex: 1;
  margin: 0 8rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.quick-option:first-child {
  margin-left: 0;
}

.quick-option:last-child {
  margin-right: 0;
}

.quick-option.active {
  background: linear-gradient(to right, #6D4C41, #8D6E63);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(109, 76, 65, 0.3);
}

/* 订阅总计 */
.subscription-total {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(to right bottom, #f9f9f9, #ffffff);
}

.total-price, .discount, .final-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.total-label, .discount-label {
  font-size: 28rpx;
  color: #666;
}

.total-value, .discount-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.final-price {
  margin-top: 24rpx;
  border-top: 1rpx dashed #eee;
  padding-top: 20rpx;
}

.final-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.final-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #D84315;
}

/* 订阅按钮 */
.subscribe-actions {
  margin-bottom: 30rpx;
}

.btn-subscribe {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(to right, #D84315, #FF7043);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  box-shadow: 0 6rpx 12rpx rgba(216, 67, 21, 0.2);
  transition: all 0.3s ease;
}

.btn-subscribe:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(216, 67, 21, 0.2);
}

.btn-subscribe[disabled] {
  background: linear-gradient(to right, #E0E0E0, #EEEEEE);
  color: #999;
  box-shadow: none;
}

/* 订阅说明 */
.subscription-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 20rpx;
}

.info-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  bottom: 6rpx;
  width: 6rpx;
  background-color: #6D4C41;
  border-radius: 3rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.6;
  padding-left: 20rpx;
} 