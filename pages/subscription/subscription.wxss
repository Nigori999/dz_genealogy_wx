/* 订阅服务页面样式 */
.container {
  padding: 30rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* 当前订阅信息 */
.current-plan {
  margin-bottom: 40rpx;
}

.plan-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.plan-features {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plan-feature {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.feature-label {
  color: #666;
  font-size: 28rpx;
  width: 180rpx;
}

.feature-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 自定义订阅 */
.custom-subscription {
  margin-bottom: 40rpx;
}

.subscription-item {
  margin-bottom: 40rpx;
}

.item-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.item-price {
  font-size: 28rpx;
  color: #D84315;
}

.item-content {
  margin: 30rpx 0;
}

.count-selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.count-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 56rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  background-color: #f8f8f8;
  font-size: 32rpx;
  color: #333;
}

.count-input {
  flex: 1;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
  width: 120rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  margin: 0 1rpx;
  background-color: #fff;
}

.unit {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.item-subtotal {
  font-size: 26rpx;
  color: #D84315;
  text-align: right;
}

/* 订阅总计 */
.subscription-total {
  margin-bottom: 40rpx;
  padding: 30rpx;
}

.total-price, .discount, .final-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.total-label, .discount-label {
  font-size: 28rpx;
  color: #666;
}

.total-value, .discount-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.final-price {
  margin-top: 30rpx;
  border-top: 1rpx dashed #eee;
  padding-top: 20rpx;
}

.final-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.final-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #D84315;
}

/* 订阅按钮 */
.subscribe-actions {
  margin-bottom: 40rpx;
}

.btn-subscribe {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #D84315;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
}

.btn-subscribe[disabled] {
  background-color: #ddd;
  color: #999;
}

/* 订阅说明 */
.subscription-info {
  margin-bottom: 40rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
  line-height: 1.6;
}

.quick-options {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.quick-option {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  flex: 1;
  margin: 0 10rpx;
}

.quick-option.active {
  background-color: #6D4C41;
  color: #fff;
} 