/* 订阅服务页面样式 */
.container {
  padding: 24rpx;
  background-color: #f8f8f8;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 26rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card-header {
  padding: 26rpx 30rpx;
  border-bottom: 2rpx solid rgba(109, 76, 65, 0.2);
  position: relative;
}

.card-header::after {
  content: '';
  position: absolute;
  left: 0;
  top: 24rpx;
  bottom: 24rpx;
  width: 6rpx;
  background: linear-gradient(to bottom, #6D4C41, #A1887F);
  border-radius: 0 3rpx 3rpx 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 14rpx;
}

.card-content {
  padding: 28rpx 30rpx;
}

/* 当前订阅信息 */
.current-plan {
  margin-bottom: 28rpx;
  background: linear-gradient(to right bottom, #ffffff, #f8f8f8);
  border-left: 3rpx solid #6D4C41;
}

.plan-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #6D4C41;
  margin-bottom: 24rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid rgba(109, 76, 65, 0.3);
  text-align: center;
}

/* 布局样式 */
.plan-features {
  display: flex;
  flex-direction: column;
  gap: 26rpx;
}

.plan-features-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 30rpx;
  background-color: #fcfcfc;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.02);
}

.plan-feature {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8rpx 0;
  flex: 1;
}

.feature-label {
  color: #666;
  font-size: 28rpx;
  width: 150rpx;
}

.feature-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  background: rgba(109, 76, 65, 0.05);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.plan-total {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed rgba(109, 76, 65, 0.2);
}

.total-label {
  color: #666;
  font-size: 30rpx;
  margin-right: 16rpx;
}

.total-value {
  color: #D84315;
  font-size: 32rpx;
  font-weight: 600;
  background: rgba(216, 67, 21, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

/* 自定义订阅 */
.custom-subscription {
  margin-bottom: 24rpx;
}

.subscription-item {
  margin-bottom: 36rpx;
  border-bottom: 2rpx solid rgba(109, 76, 65, 0.25);
  padding-bottom: 26rpx;
  position: relative;
}

.subscription-item:last-child {
  margin-bottom: 10rpx;
  border-bottom: none;
  padding-bottom: 0;
}

.item-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid rgba(109, 76, 65, 0.25);
}

.item-title-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.item-description {
  font-size: 24rpx;
  color: #999;
  line-height: 1.3;
}

.price-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(109, 76, 65, 0.08);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  width: fit-content;
  margin-top: 4rpx;
  margin-left: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(109, 76, 65, 0.15);
  flex-shrink: 0;
}

.price-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 4rpx;
}

.price-value {
  font-size: 28rpx;
  color: #D84315;
  font-weight: 500;
}

.item-content {
  margin: 24rpx 0 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-content.compact {
  margin: 16rpx 0 30rpx;
}

.count-selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 24rpx auto;
  width: 80%;
  max-width: 400rpx;
  background-color: rgba(109, 76, 65, 0.03);
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  padding: 4rpx;
}

.count-btn {
  width: 70rpx;
  height: 70rpx;
  line-height: 66rpx;
  text-align: center;
  border: 1rpx solid rgba(109, 76, 65, 0.2);
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0.8);
  font-size: 36rpx;
  font-weight: bold;
  color: #6D4C41;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.count-btn:active {
  background-color: #f0f0f0;
  transform: scale(0.97);
}

.count-input {
  flex: 1;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #333;
  width: 140rpx;
  margin: 0 8rpx;
  background-color: transparent;
  font-weight: 500;
}

.unit {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #666;
  padding: 0 10rpx;
}

.item-subtotal {
  font-size: 26rpx;
  color: #D84315;
  text-align: right;
  font-weight: 500;
  margin-top: 12rpx;
  background: rgba(216, 67, 21, 0.05);
  display: inline-block;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  float: right;
  box-shadow: 0 2rpx 4rpx rgba(216, 67, 21, 0.1);
  border: 1rpx solid rgba(216, 67, 21, 0.08);
}

/* 快速选项 */
.quick-options {
  display: flex;
  justify-content: space-between;
  margin: 24rpx auto;
  width: 92%;
}

.quick-option {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  flex: 1;
  margin: 0 8rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.quick-option:first-child {
  margin-left: 0;
}

.quick-option:last-child {
  margin-right: 0;
}

.quick-option.active {
  background: linear-gradient(to right, #6D4C41, #8D6E63);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(109, 76, 65, 0.3);
  border: 1rpx solid rgba(109, 76, 65, 0.5);
}

/* 订阅总计 */
.subscription-total {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(to right bottom, #f9f9f9, #ffffff);
  border-left: 3rpx solid #D84315;
}

.total-price, .discount, .final-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 8rpx 0;
}

.discount {
  border-bottom: 2rpx dashed rgba(109, 76, 65, 0.25);
  padding-bottom: 16rpx;
}

.total-label, .discount-label {
  font-size: 28rpx;
  color: #666;
}

.total-value, .discount-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.discount-value {
  color: #4CAF50;
}

.final-price {
  margin-top: 24rpx;
  border-top: 2rpx solid rgba(109, 76, 65, 0.3);
  padding-top: 20rpx;
}

.final-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.final-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #D84315;
  background: rgba(216, 67, 21, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

/* 订阅按钮 */
.subscribe-actions {
  margin-bottom: 30rpx;
}

.btn-subscribe {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(to right, #D84315, #FF7043);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  box-shadow: 0 6rpx 12rpx rgba(216, 67, 21, 0.2);
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
}

.btn-subscribe::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: 0.5s;
}

.btn-subscribe:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(216, 67, 21, 0.2);
}

.btn-subscribe:active::after {
  left: 100%;
}

.btn-subscribe[disabled] {
  background: linear-gradient(to right, #E0E0E0, #EEEEEE);
  color: #999;
  box-shadow: none;
}

/* 订阅说明 */
.subscription-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 20rpx;
}

.info-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  bottom: 6rpx;
  width: 6rpx;
  background-color: #6D4C41;
  border-radius: 3rpx;
  opacity: 0.9;
}

.info-item {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.6;
  padding-left: 20rpx;
} 