/* 通知中心页面样式 */
.container {
  padding-bottom: 100rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* 过滤栏 */
.filter-bar {
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 0;
  position: relative;
}

.filter-item.active {
  color: #D84315;
  font-weight: bold;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #D84315;
  border-radius: 2rpx;
}

/* 通知列表 */
.notification-list {
  padding: 20rpx 0;
}

.notification-item {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  position: relative;
  overflow: hidden;
}

.notification-item.unread {
  background-color: #FFF8E1;
}

.notification-dot {
  position: absolute;
  top: 30rpx;
  left: 10rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #FF0000;
}

.notification-content {
  margin-left: 10rpx;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.notification-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.notification-body {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.notification-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.notification-tag {
  font-size: 24rpx;
  color: #D84315;
  background-color: rgba(216, 67, 21, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.notification-actions {
  display: flex;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-left: 16rpx;
}

.mark-btn {
  color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
  border: 1rpx solid #4CAF50;
}

.mark-btn.disabled {
  color: #999;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
}

.delete-btn {
  color: #F44336;
  background-color: rgba(244, 67, 54, 0.1);
  border: 1rpx solid #F44336;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  padding: 30rpx 0;
}

.load-more {
  color: #D84315;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

/* 底部工具栏 */
.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  z-index: 100;
}

.toolbar-left {
  display: flex;
  align-items: center;
}

.checkbox-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.checkbox-label checkbox {
  margin-right: 10rpx;
  transform: scale(0.8);
}

.toolbar-right {
  display: flex;
}

.toolbar-btn {
  margin-left: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.mark-all-btn {
  color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
  border: 1rpx solid #4CAF50;
}

.delete-all-btn {
  color: #fff;
  background-color: #F44336;
  border: 1rpx solid #F44336;
} 