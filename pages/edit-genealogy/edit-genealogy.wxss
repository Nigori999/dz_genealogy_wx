/* 编辑族谱页面样式 */
.container {
  padding: 30rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #6D4C41;
  padding-left: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.required {
  color: #E53935;
  margin-right: 5rpx;
}

.form-input {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.switch-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
}

.switch-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: -15rpx;
  margin-bottom: 30rpx;
}

.join-method-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.radio-item {
  margin-right: 60rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.invite-code-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.invite-code {
  flex: 1;
}

.btn-generate {
  width: 180rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  background-color: #6D4C41;
  color: #fff;
  margin-left: 20rpx;
  padding: 0;
  border-radius: 8rpx;
}

.cover-preview {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1rpx dashed #ccc;
  border-radius: 12rpx;
}

.cover-placeholder .iconfont {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.form-tips {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.btn-upload {
  background-color: #fff;
  color: #6D4C41;
  border: 1rpx solid #6D4C41;
  font-size: 28rpx;
  border-radius: 8rpx;
  width: 250rpx;
}

.form-actions {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.btn-cancel {
  width: 45%;
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.btn-submit {
  width: 45%;
  background-color: #6D4C41;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}

/* 禁用样式 */
.btn-submit[disabled] {
  background-color: #d5c3bc !important;
  color: #fff !important;
} 