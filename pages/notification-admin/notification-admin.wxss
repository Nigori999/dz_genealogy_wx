/* 通知管理页面样式 */
.container {
  padding: 30rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
  box-sizing: border-box;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* 通用样式 */
.section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-content {
  padding: 0 30rpx 30rpx;
}

.section-more {
  font-size: 26rpx;
  color: #D84315;
  display: flex;
  align-items: center;
}

.section-more .iconfont {
  margin-left: 4rpx;
  font-size: 24rpx;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 数据统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0 10rpx;
}

.stats-item {
  flex: 1;
  text-align: center;
  padding: 0 20rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #D84315;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #999;
}

/* 操作面板 */
.action-panel {
  display: flex;
  padding: 20rpx 0;
}

.action-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  position: relative;
}

.action-button:first-child::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #f5f5f5;
}

.action-icon {
  font-size: 60rpx;
  color: #D84315;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

/* 通知类型统计 */
.category-list {
  padding: 10rpx 0;
}

.category-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-name {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}

.category-bar {
  flex: 1;
  height: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.category-progress {
  height: 100%;
  background-color: #D84315;
  border-radius: 10rpx;
}

.category-count {
  width: 80rpx;
  font-size: 28rpx;
  color: #666;
  text-align: right;
}

/* 通知列表 */
.notification-list {
  padding: 10rpx 0;
}

.notification-item {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 30rpx 0;
}

.notification-item:last-child {
  border-bottom: none;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.notification-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.notification-stats {
  display: flex;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.stat-icon {
  margin-right: 8rpx;
  color: #D84315;
}

.notification-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.notification-tag {
  font-size: 24rpx;
  color: #D84315;
  background-color: rgba(216, 67, 21, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.notification-actions {
  display: flex;
}

.action-btn {
  min-width: 120rpx;
  height: 56rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.recall-btn {
  color: #E53935;
  background-color: rgba(229, 57, 53, 0.1);
  border: 1rpx solid #E53935;
}

.disabled {
  color: #999;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
}

/* 底部弹窗 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  transition: opacity 0.3s ease;
}

.popup-container {
  position: fixed;
  left: 10px;
  right: 10px;
  bottom: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  max-height: 85vh;
  overflow-y: auto;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 20px);
}

.popup-show {
  transform: translateY(0);
}

.popup-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  position: sticky;
  top: 0;
  background-color: #fff;
  z-index: 10;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
}

.popup-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 32rpx;
  border-radius: 50%;
}

.popup-close:active {
  background-color: #f5f5f5;
}

.popup-content {
  padding: 40rpx 30rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-group:last-of-type {
  margin-bottom: 30rpx;
}

.form-input, .form-textarea, .form-picker {
  width: 100%;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid transparent;
  min-height: 88rpx;
}

.form-input {
  height: 88rpx;
  line-height: 40rpx;
}

.form-input:focus, .form-textarea:focus {
  border-color: #D84315;
  background-color: #fff;
}

.form-textarea {
  height: 240rpx;
  line-height: 1.6;
  padding-bottom: 40rpx;
  min-height: 240rpx;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  position: relative;
  top: -8rpx;
  right: 16rpx;
  background-color: transparent;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 88rpx;
  background-color: #f8f8f8;
  padding: 0 24rpx;
  border-radius: 12rpx;
}

.picker-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-picker .iconfont {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #D84315;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(216, 67, 21, 0.2);
  transition: all 0.2s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(216, 67, 21, 0.2);
}

.submit-btn[disabled] {
  background-color: #f5f5f5;
  color: #999;
  box-shadow: none;
}

/* 搜索下拉框样式 */
.search-dropdown {
  position: relative;
  width: 100%;
  z-index: 200;
}

.search-dropdown-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  min-height: 88rpx;
}

.search-dropdown-header:active {
  opacity: 0.8;
}

.selected-receiver {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dropdown-container {
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  max-height: 400rpx;
  margin-top: 8rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.search-box {
  position: relative;
  padding: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.search-input {
  padding: 16rpx 60rpx 16rpx 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 26rpx;
  width: 100%;
  box-sizing: border-box;
  height: 70rpx;
}

.search-box .iconfont {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 28rpx;
}

.dropdown-list {
  max-height: 330rpx;
  width: 100%;
  box-sizing: border-box;
}

.dropdown-item {
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.active {
  color: #D84315;
  background-color: rgba(216, 67, 21, 0.05);
}

.item-hover {
  background-color: #f8f8f8;
}

.no-results {
  padding: 30rpx 24rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.input-container {
  width: 100%;
  position: relative;
}

.input-placeholder {
  color: #999;
  font-size: 28rpx;
} 