/* pages/switch-genealogy/switch-genealogy.wxss */
/* 族谱切换页面样式 */
.container {
  padding: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.genealogy-list {
  width: 100%;
}

.list-loading {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.empty-genealogy {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-actions {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.btn-primary {
  background-color: #6D4C41;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  border: none;
}

.btn-secondary {
  background-color: #fff;
  color: #6D4C41;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  border: 1px solid #6D4C41;
}

.add-genealogy {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  height: 100rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.add-genealogy .iconfont {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.add-genealogy text {
  color: #666;
  font-size: 28rpx;
}