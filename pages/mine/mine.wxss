/* 个人中心页面样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: var(--color-background);
  padding-bottom: 32px;
}

/* 用户信息 */
.user-info {
  background-image: var(--gradient-header);
  padding: 32px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #FFFFFF;
}

.user-avatar {
  width: 80px;
  height: 80px;
  border-radius: 40px;
  background-color: rgba(255, 255, 255, 0.3);
  margin-bottom: 16px;
  position: relative;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 40px;
}

.avatar-edit-hint {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #FFFFFF;
  font-size: 12px;
  text-align: center;
  padding: 4px 0;
  transform: translateY(100%);
  transition: transform 0.2s;
}

.user-avatar:active .avatar-edit-hint {
  transform: translateY(0);
}

.user-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 8px;
}

.user-status {
  font-size: 14px;
  opacity: 0.8;
}

/* 部分标题 */
.section {
  margin: 16px;
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  position: relative;
  padding-left: 12px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4px;
  bottom: 4px;
  width: 4px;
  background-color: var(--color-primary);
  border-radius: 2px;
}

.section-action {
  font-size: 14px;
  color: var(--color-text-light);
  display: flex;
  align-items: center;
}

.section-action .iconfont {
  margin-left: 4px;
  font-size: 12px;
}

/* 族谱列表 */
.genealogy-list {
  margin-bottom: 16px;
}

.list-loading {
  padding: 32px 0;
  display: flex;
  justify-content: center;
}

.limit-tip {
  background-color: var(--color-background);
  padding: 12px 16px;
  border-radius: 8px;
  margin-top: 16px;
  font-size: 14px;
  color: var(--color-text-medium);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tip-action {
  color: var(--color-accent);
  font-weight: bold;
}

.add-genealogy {
  background-color: var(--color-background);
  border: 1px dashed var(--color-border);
  border-radius: 12px;
  height: 100px;
  margin-top: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--color-text-light);
  font-size: 14px;
}

.add-genealogy .iconfont {
  font-size: 24px;
  margin-bottom: 8px;
}

.empty-genealogy {
  padding: 32px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
  opacity: 0.7;
}

.empty-text {
  font-size: 14px;
  color: var(--color-text-light);
  margin-bottom: 24px;
  line-height: 1.5;
}

.empty-actions {
  display: flex;
}

.empty-actions button {
  margin: 0 8px;
}

/* 菜单部分 */
.menu-section {
  flex: 1;
  padding: 0 16px;
}

/* 订阅信息卡片 */
.subscription-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.subscription-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 4px;
}

.subscription-detail {
  font-size: 12px;
  color: var(--color-text-light);
}

.subscription-action {
  font-size: 14px;
  color: var(--color-primary);
  display: flex;
  align-items: center;
}

.subscription-action .iconfont {
  margin-left: 4px;
  font-size: 12px;
}

/* 菜单列表 */
.menu-list {
  margin-bottom: 32px;
}

.menu-group {
  margin-bottom: 24px;
}

.menu-group-title {
  font-size: 14px;
  color: var(--color-text-light);
  margin-bottom: 8px;
  padding-left: 16px;
}

.menu-item {
  background-color: #FFFFFF;
  height: 54px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
  margin-bottom: 1px;
}

.menu-item:first-child {
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}

.menu-item:last-child {
  border-bottom-left-radius: 12px;
  border-bottom-right-radius: 12px;
  margin-bottom: 0;
}

.menu-item-left {
  display: flex;
  align-items: center;
  position: relative;
}

.menu-icon {
  font-size: 20px;
  color: var(--color-primary);
  margin-right: 12px;
}

.menu-name {
  font-size: 14px;
  color: var(--color-text-dark);
}

/* 未读通知数量徽章 */
.unread-badge {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F44336;
  color: #FFFFFF;
  font-size: 10px;
  min-width: 16px;
  height: 16px;
  border-radius: 8px;
  padding: 0 4px;
  margin-left: 8px;
}

.menu-item .icon-arrow-right {
  font-size: 14px;
  color: var(--color-text-light);
}

/* 退出登录按钮 */
.logout-btn {
  background-color: #FFFFFF;
  height: 54px;
  line-height: 54px;
  text-align: center;
  border-radius: 12px;
  font-size: 16px;
  color: #F44336;
  margin-bottom: 32px;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 12px;
  color: var(--color-text-light);
  padding: 16px 0;
}