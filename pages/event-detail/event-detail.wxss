/* 事件详情页面样式 */
.container {
  padding: 16px;
  background-color: var(--color-background);
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

/* 标题通用样式 */
.section-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 16px;
  position: relative;
  padding-left: 12px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4px;
  bottom: 4px;
  width: 4px;
  background-color: var(--color-primary);
  border-radius: 2px;
}

/* 事件头部信息 */
.event-header {
  position: relative;
}

.event-title {
  font-size: 20px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 8px;
}

.event-date {
  font-size: 16px;
  color: var(--color-text-medium);
  margin-bottom: 12px;
}

.event-type {
  display: flex;
}

.type-badge {
  display: inline-block;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
  background-color: var(--color-primary-ultralight);
  color: var(--color-primary);
}

.type-badge.birth {
  background-color: rgba(40, 167, 69, 0.1);
  color: #28A745;
}

.type-badge.death {
  background-color: rgba(220, 53, 69, 0.1);
  color: #DC3545;
}

.type-badge.wedding {
  background-color: rgba(255, 193, 7, 0.1);
  color: #FFC107;
}

.type-badge.career {
  background-color: rgba(23, 162, 184, 0.1);
  color: #17A2B8;
}

.type-badge.education {
  background-color: rgba(102, 16, 242, 0.1);
  color: #6610F2;
}

.type-badge.achievement {
  background-color: rgba(216, 67, 21, 0.1);
  color: #D84315;
}

.edit-btn {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 36px;
  height: 36px;
  border-radius: 18px;
  background-color: var(--color-primary-ultralight);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-primary);
}

/* 事件详情 */
.detail-item {
  margin-bottom: 16px;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 14px;
  color: var(--color-text-light);
  margin-bottom: 4px;
}

.detail-content {
  font-size: 16px;
  color: var(--color-text-dark);
  line-height: 1.6;
}

/* 事件媒体 */
.media-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -4px;
}

.media-item {
  width: calc(33.33% - 8px);
  height: 100px;
  margin: 4px;
  border-radius: 4px;
  object-fit: cover;
}

.add-media {
  width: calc(33.33% - 8px);
  height: 100px;
  margin: 4px;
  border-radius: 4px;
  border: 1px dashed var(--color-border);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--color-text-light);
}

.add-icon {
  font-size: 24px;
  margin-bottom: 4px;
}

.add-text {
  font-size: 12px;
}

.empty-media {
  margin-bottom: 16px;
}

.empty-content {
  text-align: center;
  padding: 24px 0;
  color: var(--color-text-light);
  font-size: 14px;
}

.empty-content button {
  margin-top: 16px;
}

/* 相关成员 */
.members-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8px;
}

.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80px;
  margin: 8px;
}

.member-avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-bottom: 8px;
}

.member-name {
  font-size: 14px;
  color: var(--color-text-medium);
  text-align: center;
  max-width: 80px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.add-member {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80px;
  margin: 8px;
}

.add-member .add-icon {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  border: 1px dashed var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: var(--color-text-light);
  margin-bottom: 8px;
}

.empty-members {
  text-align: center;
  padding: 24px 0;
  color: var(--color-text-light);
  font-size: 14px;
}

.empty-members button {
  margin-top: 16px;
}

/* 删除按钮 */
.delete-section {
  margin-top: 32px;
  margin-bottom: 32px;
}

.btn-delete {
  background-color: #FFFFFF;
  color: #F44336;
  border: 1px solid #F44336;
  border-radius: 20px;
}