/* 账户与安全设置页面样式 */
.container {
  padding: 30rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* 通用样式 */
.section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-content {
  padding: 0 30rpx;
}

/* 设置项目 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #6D4C41;
}

.item-name {
  font-size: 30rpx;
  color: #333;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-value {
  font-size: 28rpx;
  color: #999;
  margin-right: 16rpx;
}

.item-copy {
  font-size: 24rpx;
  color: #D84315;
  margin-right: 16rpx;
}

.icon-arrow-right {
  font-size: 32rpx;
  color: #ccc;
}

/* 授权设置 */
.auth-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}

.auth-manage {
  color: #D84315;
}

.auth-items {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 0 30rpx;
}

.auth-item {
  width: 30%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-right: 3%;
  margin-bottom: 20rpx;
  position: relative;
}

.auth-item.authorized {
  background-color: #E8F5E9;
}

.auth-item.authorized::after {
  content: '';
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #4CAF50;
}

.auth-name {
  font-size: 24rpx;
  color: #666;
}

/* 注销账号 */
.delete-account {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  font-size: 32rpx;
  color: #E53935;
  padding: 30rpx 0;
}

.delete-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding-bottom: 30rpx;
} 