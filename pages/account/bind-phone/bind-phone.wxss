/* 绑定手机号页面样式 */
.container {
  padding: 30rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-header {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 24rpx;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.form-input.with-code {
  padding-right: 0;
}

.form-input input {
  height: 90rpx;
  width: 100%;
  font-size: 28rpx;
}

.send-code {
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #D84315;
  font-size: 28rpx;
  border-left: 1rpx solid #e0e0e0;
  flex-shrink: 0;
}

.send-code.disabled {
  color: #999;
}

.error-message {
  color: #E53935;
  font-size: 26rpx;
  margin-top: 20rpx;
}

.form-actions {
  margin-bottom: 40rpx;
}

.btn-submit {
  background-color: #D84315;
  color: #fff;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-weight: bold;
}

.btn-disabled {
  background-color: #dddddd;
  color: #999999;
}

.form-tips {
  padding: 30rpx 0;
  border-top: 1rpx dashed #e0e0e0;
}

.tip-item {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.tip-title {
  color: #666;
  font-weight: bold;
} 