<!-- 登录页面 -->
<view class="container login-container">
  <view class="logo-container">
    <image class="logo" src="/assets/images/app_logo.png" mode="aspectFit"></image>
    <view class="app-name">云族谱</view>
    <view class="app-slogan">记录家族历史，传承家族文化</view>
  </view>
  
  <view class="login-options">
    <view class="option-title">登录选项</view>
    
    <view class="user-options">
      <!-- 高级管理员 -->
      <view class="user-option" bindtap="loginWithUserType" data-type="admin">
        <view class="option-icon admin-icon">高级</view>
        <view class="option-info">
          <view class="option-name">高级管理员</view>
          <view class="option-desc">无限制，可访问所有功能</view>
        </view>
      </view>
      
      <!-- 家族长 -->
      <view class="user-option" bindtap="loginWithUserType" data-type="owner">
        <view class="option-icon owner-icon">族长</view>
        <view class="option-info">
          <view class="option-name">家族长</view>
          <view class="option-desc">受限制，管理权限有限</view>
        </view>
      </view>
      
      <!-- 普通成员 -->
      <view class="user-option" bindtap="loginWithUserType" data-type="member">
        <view class="option-icon member-icon">成员</view>
        <view class="option-info">
          <view class="option-name">普通成员</view>
          <view class="option-desc">只有家族，查看权限有限</view>
        </view>
      </view>
    </view>
  </view>
  
  <view class="login-footer">
    <view class="copyright">©2023 云族谱 版权所有</view>
  </view>
</view>