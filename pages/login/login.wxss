/* 登录页面样式 */
.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e9ecf6 100%);
  position: relative;
  padding-bottom: 20rpx;
  overflow: hidden; /* 防止气泡溢出 */  
}

/* Logo区域 */
.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 30rpx;
  animation: fadeInDown 0.8s ease;
  position: relative; /* 确保在气泡之上 */
  z-index: 2;
}

.logo-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(66, 133, 244, 0.2);
  transform: translateY(0);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.logo-image:active {
  transform: translateY(6rpx);
  box-shadow: 0 4rpx 15rpx rgba(66, 133, 244, 0.15);
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: #666;
  letter-spacing: 1rpx;
}

/* 登录内容区 */
.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-top: 20px;
  animation: fadeInUp 0.8s ease;
  position: relative; /* 确保在气泡之上 */
  z-index: 2;
}

/* 账号登录区域 */
.account-login {
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 20rpx;
  position: relative;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  transition: transform 0.3s ease;
}

.input-group.focus {
  transform: translateY(-4rpx);
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.input-group.focus .input-label {
  color: #4285F4;
  font-weight: 600;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.input-field {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 30rpx 0 30rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input-field.has-value {
  padding-right: 60rpx;
}

.input-group.focus .input-field {
  border-color: #4285F4;
  box-shadow: 0 6rpx 16rpx rgba(66, 133, 244, 0.15);
  background-color: #f8fbff;
}

/* 完成图标 */
.complete-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  color: #4285F4;
  z-index: 10;
}

.login-tip {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 25rpx;
  text-align: center;
}

.account-button {
  background: linear-gradient(135deg, #4285F4, #34A5FF);
  box-shadow: 0 8rpx 20rpx rgba(66, 133, 244, 0.3);
  margin-bottom: 15rpx;
  letter-spacing: 2rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  transform: translateY(0);
  height: 84rpx;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}

.account-button:active {
  transform: translateY(6rpx);
  box-shadow: 0 4rpx 10rpx rgba(66, 133, 244, 0.2);
  opacity: 0.9;
}

/* 分隔线 */
.divider {
  position: relative;
  width: 90%;
  text-align: center;
  line-height: 0px;
  margin: 25rpx auto 50rpx;
}

.divider:before, .divider:after {
  content: '';
  position: absolute;
  top: 50%;
  width: 35%;
  height: 1rpx;
  background: rgba(0, 0, 0, 0.1);
  box-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.3);
}

.divider:before {
  left: 0;
}

.divider:after {
  right: 0;
}

.divider-text {
  display: inline-block;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 0.7);
  background: transparent;
  position: relative;
  z-index: 1;
}

/* 登录按钮区域 */
.login-button-area {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.login-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80%;
  height: 84rpx;
  background: linear-gradient(135deg, #07C160, #10D570);
  color: #FFFFFF;
  font-size: 30rpx;
  border-radius: 42rpx;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  letter-spacing: 2rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  transform: translateY(0);
  margin-left: auto;
  margin-right: auto;
}

.login-button .iconfont {
  margin-right: 10rpx;
  font-size: 34rpx;
}

.login-button:active {
  transform: translateY(6rpx);
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.2);
  opacity: 0.9;
}

.login-button[disabled] {
  opacity: 0.7;
  background: linear-gradient(135deg, #07C160, #10D570);
  color: #FFFFFF;
}

/* 协议文本 */
.policy-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin: 40rpx 0 20rpx;
  animation: fadeIn 1s ease;
  position: relative; /* 确保在气泡之上 */
  z-index: 2;
}

.policy-text text {
  color: #4285F4;
}

/* 气泡背景 */
.bubbles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  overflow: hidden;
}

.bubble {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.1);
  animation: bubble-float linear infinite;
}

.bubble:nth-child(1) {
  width: 60rpx;
  height: 60rpx;
  left: 10%;
  top: 15%;
  animation-duration: 20s;
  animation-delay: 0s;
}

.bubble:nth-child(2) {
  width: 100rpx;
  height: 100rpx;
  left: 20%;
  top: 40%;
  animation-duration: 22s;
  animation-delay: 1s;
}

.bubble:nth-child(3) {
  width: 80rpx;
  height: 80rpx;
  right: 15%;
  top: 25%;
  animation-duration: 25s;
  animation-delay: 3s;
}

.bubble:nth-child(4) {
  width: 50rpx;
  height: 50rpx;
  left: 35%;
  top: 65%;
  animation-duration: 18s;
  animation-delay: 2s;
}

.bubble:nth-child(5) {
  width: 70rpx;
  height: 70rpx;
  right: 25%;
  top: 60%;
  animation-duration: 26s;
  animation-delay: 4s;
}

.bubble:nth-child(6) {
  width: 40rpx;
  height: 40rpx;
  left: 50%;
  top: 30%;
  animation-duration: 19s;
  animation-delay: 0s;
}

.bubble:nth-child(7) {
  width: 120rpx;
  height: 120rpx;
  right: 8%;
  top: 70%;
  animation-duration: 24s;
  animation-delay: 5s;
}

.bubble:nth-child(8) {
  width: 90rpx;
  height: 90rpx;
  left: 65%;
  top: 10%;
  animation-duration: 21s;
  animation-delay: 6s;
}

.bubble:nth-child(9) {
  width: 55rpx;
  height: 55rpx;
  left: 75%;
  top: 45%;
  animation-duration: 23s;
  animation-delay: 2s;
}

.bubble:nth-child(10) {
  width: 45rpx;
  height: 45rpx;
  left: 5%;
  top: 80%;
  animation-duration: 19s;
  animation-delay: 1s;
}

.bubble:nth-child(11) {
  width: 85rpx;
  height: 85rpx;
  right: 40%;
  top: 85%;
  animation-duration: 27s;
  animation-delay: 3s;
}

.bubble:nth-child(12) {
  width: 65rpx;
  height: 65rpx;
  right: 60%;
  top: 5%;
  animation-duration: 20s;
  animation-delay: 4s;
}

@keyframes bubble-float {
  0% {
    transform: translateY(0) translateX(0) rotate(0);
    opacity: 0.15;
  }
  25% {
    transform: translateY(-20rpx) translateX(10rpx) rotate(5deg);
    opacity: 0.2;
  }
  50% {
    transform: translateY(-40rpx) translateX(-10rpx) rotate(0);
    opacity: 0.25;
  }
  75% {
    transform: translateY(-20rpx) translateX(15rpx) rotate(-5deg);
    opacity: 0.2;
  }
  100% {
    transform: translateY(0) translateX(0) rotate(0);
    opacity: 0.15;
  }
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translate3d(0, -50rpx, 0);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 50rpx, 0);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 加载动画 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid rgba(66, 133, 244, 0.3);
  border-radius: 50%;
  border-top-color: #4285F4;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}