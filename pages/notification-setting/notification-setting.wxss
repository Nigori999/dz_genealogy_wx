/* 通知设置页面样式 */
.container {
  padding: 30rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* 通用样式 */
.section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.section-content {
  padding: 20rpx 30rpx;
}

/* 主开关 */
.main-switch-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.main-switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-label {
  flex: 1;
}

.switch-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.switch-desc {
  font-size: 26rpx;
  color: #999;
}

.wx-switch {
  transform: scale(1.1);
}

/* 订阅消息 */
.subscription-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.subscription-item:last-child {
  border-bottom: none;
}

.subscription-item.disabled {
  opacity: 0.6;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
}

.item-status {
  font-size: 26rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
}

.item-status.subscribed {
  color: #4CAF50;
  background-color: #E8F5E9;
}

.subscription-tips {
  display: flex;
  align-items: flex-start;
  margin-top: 20rpx;
  padding: 16rpx;
  background-color: #FFF9E6;
  border-radius: 8rpx;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #FFB300;
  color: #fff;
  font-size: 22rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tips-text {
  flex: 1;
  font-size: 24rpx;
  color: #F57C00;
  line-height: 1.5;
}

/* 禁用区域 */
.disabled-section {
  opacity: 0.6;
}

/* 设置项目 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.item-right {
  display: flex;
  align-items: center;
}

.mini-switch {
  transform: scale(0.9);
}

/* 通知权限管理 */
.manage-container {
  margin-top: 40rpx;
  padding: 0 40rpx;
  margin-bottom: 80rpx;
}

.manage-btn {
  background-color: #fff;
  border: 1rpx solid #D84315;
  color: #D84315;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.manage-tips {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 通知历史记录 */
.history-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.history-item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.history-item-time {
  font-size: 24rpx;
  color: #999;
}

.history-item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.history-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-item-tag {
  font-size: 22rpx;
  color: #D84315;
  background-color: rgba(216, 67, 21, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.history-item-status {
  font-size: 24rpx;
}

.history-item-status.read {
  color: #999;
}

.history-item-status.unread {
  color: #4CAF50;
  font-weight: bold;
}

.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.history-btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35rpx;
  font-size: 28rpx;
  background-color: #D84315;
  color: #fff;
  margin: 0 10rpx;
}

.history-btn.clear {
  background-color: #f5f5f5;
  color: #666;
} 