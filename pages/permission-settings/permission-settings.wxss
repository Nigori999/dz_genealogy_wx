/* pages/permission-settings/permission-settings.wxss */
@import "../../assets/fonts/iconfont.wxss";

.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.genealogy-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.genealogy-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.genealogy-desc {
  font-size: 24rpx;
  color: #666;
}

.permission-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #D84315;
}

.add-btn text {
  margin-right: 6rpx;
}

.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}

.permission-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.permission-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.permission-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  position: relative;
  font-size: 20rpx;
  color: #fff;
  background-color: #8D6E63;
  padding: 4rpx 40rpx 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.tag.admin {
  background-color: #D84315;
}

/* 标签关闭按钮样式 */
.tag-close {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
  background-color: rgba(0, 0, 0, 0.15);
  margin-left: 10rpx;
}

.tag-close:active {
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
}

.user-action {
  margin-left: 20rpx;
}

.edit-btn {
  font-size: 24rpx;
  color: #D84315;
  padding: 10rpx 20rpx;
  margin-bottom: 10rpx;
}

.remove-btn {
  font-size: 24rpx;
  color: #e64340;
  padding: 10rpx 20rpx;
}

.help-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.help-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.help-item {
  margin-bottom: 20rpx;
}

.help-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.help-desc {
  font-size: 24rpx;
  color: #666;
}

.error-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #D84315;
  padding: 20rpx 40rpx;
  border: 1rpx solid #D84315;
  border-radius: 40rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 80%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 36rpx;
  color: #999;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
}

.search-clear {
  font-size: 40rpx;
  color: #999;
}

.user-list {
  flex: 1;
  max-height: 50vh;
}

.empty-search {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.user-select-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-info-text {
  font-size: 24rpx;
  color: #999;
}

/* 权限对话框 */
.permission-dialog {
  max-height: 85vh;
}

.selected-user {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.selected-user .user-avatar {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 8rpx;
  margin-right: 0;
}

.selected-user .user-name {
  font-size: 26rpx;
}

.permission-checkbox-list {
  padding: 10rpx 30rpx;
  max-height: 45vh;
  overflow-y: auto;
}

.permission-checkbox {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.permission-checkbox:last-child {
  border-bottom: none;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
}

.checkbox.checked {
  border-color: #D84315;
  background-color: #D84315;
}

.checkbox.checked::after {
  content: '';
  position: absolute;
  top: 25%;
  left: 25%;
  width: 50%;
  height: 25%;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
}

.permission-detail {
  flex: 1;
}

.permission-name {
  font-size: 28rpx;
  color: #333;
}

.permission-desc {
  font-size: 24rpx;
  color: #666;
}

.modal-footer {
  display: flex;
  padding: 15rpx 30rpx 25rpx;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 70rpx;
}

.btn-cancel {
  color: #666;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}

.btn-confirm {
  color: #fff;
  background-color: #D84315;
}

/* 权限按钮列表样式 */
.permission-button-list {
  padding: 20rpx 20rpx;
  max-height: 45vh;
  overflow-y: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.permission-button {
  width: 47%;
  margin: 8rpx 0;
  padding: 16rpx 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  background-color: #f7f7f7;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  transition: all 0.2s ease;
}

.permission-button.checked {
  color: #fff;
  background-color: #D84315;
  border-color: #D84315;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(216, 67, 21, 0.3);
}

.button-checkbox {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 1.5rpx solid #bbb;
  margin: 0 12rpx 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  flex-shrink: 0;
  position: relative;
}

.permission-button.checked .button-checkbox {
  border-color: #fff;
  background-color: #D84315;
  box-shadow: 0 0 4rpx rgba(255, 255, 255, 0.5);
}

.checkbox-icon {
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
}

.button-text {
  flex: 1;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}