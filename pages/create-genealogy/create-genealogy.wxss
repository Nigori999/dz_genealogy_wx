/* 创建族谱页面样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: var(--color-background);
  padding-bottom: 90px; /* 为底部操作栏留出空间 */
}

/* 页面标题 */
.page-header {
  background-image: var(--gradient-header);
  padding: 16px;
  color: #FFFFFF;
}

.header-title {
  font-size: 18px;
  font-weight: bold;
}

/* 限制提示面板 */
.limit-panel {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 24px;
  margin: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  text-align: center;
}

.limit-title {
  font-size: 18px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 16px;
}

.limit-desc {
  font-size: 14px;
  color: var(--color-text-medium);
  line-height: 1.5;
  margin-bottom: 24px;
}

.btn-upgrade {
  width: 80%;
  height: 44px;
  background-image: var(--gradient-button);
  color: #FFFFFF;
  font-size: 16px;
  border-radius: 22px;
}

/* 表单面板 */
.form-panel {
  padding: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 16px;
  position: relative;
  padding-left: 12px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4px;
  bottom: 4px;
  width: 4px;
  background-color: var(--color-primary);
  border-radius: 2px;
}

/* 封面上传 */
.cover-section {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.cover-upload {
  width: 100%;
  height: 180px;
  border-radius: 8px;
  overflow: hidden;
  position: relative;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-upload-text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #FFFFFF;
  font-size: 14px;
  text-align: center;
  padding: 8px 0;
  transform: translateY(100%);
  transition: transform 0.2s;
}

.cover-upload:active .cover-upload-text {
  transform: translateY(0);
}

/* 族谱信息 */
.info-section {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 16px;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 14px;
  color: var(--color-text-medium);
  margin-bottom: 8px;
}

.required {
  color: #F44336;
  margin-left: 4px;
}

.form-input {
  width: 100%;
  height: 44px;
  border: 1px solid var(--color-border);
  border-radius: 8px;
  padding: 0 12px;
  font-size: 14px;
  color: var(--color-text-dark);
  background-color: #FFFFFF;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 100px;
  border: 1px solid var(--color-border);
  border-radius: 8px;
  padding: 12px;
  font-size: 14px;
  color: var(--color-text-dark);
  background-color: #FFFFFF;
  box-sizing: border-box;
}

.has-error .form-input,
.has-error .form-textarea {
  border-color: #F44336;
}

.error-message {
  font-size: 12px;
  color: #F44336;
  margin-top: 4px;
}

/* 提示区域 */
.tip-section {
  background-color: rgba(255, 193, 7, 0.1);
  border-radius: 8px;
  padding: 12px;
  display: flex;
}

.tip-icon {
  margin-right: 12px;
  color: #FFC107;
  font-size: 20px;
}

.tip-content {
  flex: 1;
  font-size: 14px;
  color: var(--color-text-medium);
  line-height: 1.5;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 74px;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 16px;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.btn-cancel {
  flex: 1;
  height: 48px;
  border-radius: 24px;
  border: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  color: var(--color-text-medium);
  background-color: #FFFFFF;
  margin-right: 16px;
}

.btn-submit {
  flex: 1;
  height: 48px;
  border-radius: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  color: #FFFFFF;
  background-image: var(--gradient-button);
  box-shadow: var(--shadow-button);
}