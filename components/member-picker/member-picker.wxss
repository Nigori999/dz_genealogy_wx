/* 成员选择器组件样式 */
.member-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.modal-content {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #FFFFFF;
  border-radius: 12px;
  overflow: hidden;
  z-index: 1002;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 16px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  border-bottom: 1px solid var(--color-border);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: var(--color-background);
  margin: 16px;
  border-radius: 8px;
  padding: 0 12px;
  height: 40px;
}

.search-bar .iconfont {
  color: var(--color-text-light);
  font-size: 16px;
  margin-right: 8px;
}

.search-input {
  flex: 1;
  height: 40px;
  font-size: 14px;
  color: var(--color-text-medium);
}

/* 成员列表 */
.member-list {
  flex: 1;
  max-height: 50vh;
  overflow-y: auto;
  padding: 0 16px;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid var(--color-border);
  position: relative;
}

.member-item:last-child {
  border-bottom: none;
}

.member-item.selected {
  background-color: var(--color-primary-ultralight);
}

.member-avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 12px;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 14px;
  color: var(--color-text-medium);
  margin-bottom: 4px;
}

.member-meta {
  font-size: 12px;
  color: var(--color-text-light);
}

.member-select-icon {
  width: 24px;
  height: 24px;
  border-radius: 12px;
  background-color: var(--color-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.member-checkbox {
  display: flex;
  align-items: center;
  width: 100%;
}

.member-checkbox checkbox {
  margin-right: 12px;
}

/* 空状态 */
.empty-state {
  padding: 40px 0;
  text-align: center;
  color: var(--color-text-light);
  font-size: 14px;
}

/* 底部操作栏 */
.modal-footer {
  padding: 16px;
  display: flex;
  border-top: 1px solid var(--color-border);
}

.btn-cancel {
  flex: 1;
  height: 40px;
  border-radius: 20px;
  border: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: var(--color-text-medium);
  background-color: #FFFFFF;
  margin-right: 16px;
}

.btn-confirm {
  flex: 1;
  height: 40px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #FFFFFF;
  background-image: var(--gradient-button);
  box-shadow: var(--shadow-button);
}