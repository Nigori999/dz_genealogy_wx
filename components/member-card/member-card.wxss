/* 成员卡片组件样式 */
.member-card {
  margin-bottom: 16px;
  width: 100%;
}

.member-card-inner {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

/* 性别背景色 */
.member-card-inner::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 4px;
}

.member-card-inner.male::before {
  background-color: var(--color-primary);
}

.member-card-inner.female::before {
  background-color: var(--color-accent-light);
}

.member-avatar {
  position: relative;
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-right: 16px;
  flex-shrink: 0;
  overflow: hidden;
  border: 2px solid var(--color-border);
}

.member-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 30px;
}

/* 逝者徽章 */
.memorial-badge {
  position: absolute;
  top: 0;
  right: 0;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.memorial-badge::before {
  content: '';
  width: 12px;
  height: 2px;
  background-color: #FFFFFF;
  transform: rotate(45deg);
}

.memorial-badge::after {
  content: '';
  width: 12px;
  height: 2px;
  background-color: #FFFFFF;
  transform: rotate(-45deg);
}

.member-info {
  flex: 1;
  overflow: hidden;
}

.member-name {
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.member-meta {
  font-size: 14px;
  color: var(--color-text-light);
  margin-bottom: 8px;
}

.birth-year, .death-year {
  display: inline-block;
}

.member-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 12px;
  margin-right: 6px;
  margin-bottom: 4px;
}

.tag-primary {
  background-color: var(--color-primary-ultralight);
  color: var(--color-primary);
}

.tag-accent {
  background-color: rgba(216, 67, 21, 0.1);
  color: var(--color-accent);
}

.member-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 8px;
}

.action-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
  color: var(--color-text-light);
  background-color: var(--color-background);
}

.action-btn:last-child {
  margin-bottom: 0;
}

.action-btn:active {
  opacity: 0.7;
}

/* 最后一代成员特殊样式 */
.member-card-inner.latest-gen {
  border: 1px solid var(--color-accent-light);
}

/* 根祖先特殊样式 */
.member-card-inner.root-member {
  border: 1px solid var(--color-primary);
  background-color: var(--color-primary-ultralight);
}