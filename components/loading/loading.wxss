/* 加载状态组件样式 */
.loading-container {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 20px 0;
}

.loading-container.center {
  align-items: center;
  height: 100%;
}

.loading-container.top {
  align-items: flex-start;
}

.loading-container.bottom {
  align-items: flex-end;
}

.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 默认加载样式 */
.loading-default {
  width: 32px;
  height: 32px;
  position: relative;
}

.default-spinner {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border: 3px solid transparent;
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: loading-spin 1s linear infinite;
}

/* 环形加载样式 */
.loading-spinner {
  width: 40px;
  height: 40px;
  position: relative;
}

.spinner-circle {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border: 4px solid rgba(109, 76, 65, 0.2);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: loading-spin 1s ease-in-out infinite;
}

/* 点状加载样式 */
.loading-dots {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 20px;
}

.dot {
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background-color: var(--color-primary);
  margin: 0 3px;
  animation: loading-dots 1.4s infinite ease-in-out;
}

.dot1 {
  animation-delay: -0.32s;
}

.dot2 {
  animation-delay: -0.16s;
}

.dot3 {
  animation-delay: 0s;
}

/* 加载文本 */
.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: var(--color-text-light);
}

/* 动画 */
@keyframes loading-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes loading-dots {
  0%, 80%, 100% { 
    transform: scale(0);
  }
  40% { 
    transform: scale(1.0);
  }
}