/* 家族卡片组件样式 */
.family-card {
  width: 100%;
  margin-bottom: 16px;
  border-radius: 12px;
  overflow: hidden;
  background-color: #FFFFFF;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.family-card-inner {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 180px;
}

.family-cover {
  width: 100%;
  height: 120px;
  background-color: #f5f5f5;
}

.family-info {
  flex: 1;
  padding: 12px 16px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.family-name {
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.family-meta {
  display: flex;
  margin-top: 4px;
}

.meta-item {
  font-size: 12px;
  color: var(--color-text-light);
  margin-right: 16px;
  display: flex;
  align-items: center;
}

.meta-item .iconfont {
  font-size: 14px;
  margin-right: 4px;
}

.family-update-time {
  font-size: 12px;
  color: var(--color-text-light);
  margin-top: 4px;
}

.owner-badge {
  position: absolute;
  top: 8px;
  right: 8px;
  background: linear-gradient(to right, #D84315, #FF7043);
  color: #FFFFFF;
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 4px;
  box-shadow: 0 2px 4px rgba(216, 67, 21, 0.3);
}

/* 家族卡片点击状态 */
.family-card:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}