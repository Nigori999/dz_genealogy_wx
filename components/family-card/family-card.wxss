/* 家族卡片组件样式 */
.family-card {
  width: 100%;
  margin-bottom: 16px;
  border-radius: 12px;
  overflow: hidden;
  background-color: #FFFFFF;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.family-card:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
}

.family-card-inner {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 180px;
}

.family-cover {
  width: 100%;
  height: 120px;
  background-color: #f5f5f5;
  position: relative;
  overflow: hidden;
}

.family-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.family-card:hover .family-cover image {
  transform: scale(1.05);
}

.family-info {
  flex: 1;
  padding: 16px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #FFFFFF;
}

.family-name {
  font-size: 18px;
  font-weight: bold;
  color: var(--color-text-dark);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8px;
}

.family-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.meta-item {
  font-size: 13px;
  color: var(--color-text-medium);
  display: flex;
  align-items: center;
  background-color: var(--color-background);
  padding: 4px 8px;
  border-radius: 4px;
}

.meta-item .iconfont {
  font-size: 14px;
  margin-right: 4px;
  color: var(--color-primary);
}

.family-update-time {
  font-size: 12px;
  color: var(--color-text-light);
  margin-top: 8px;
}

.owner-badge {
  position: absolute;
  top: 12px;
  right: 12px;
  background: linear-gradient(135deg, #D84315, #FF7043);
  color: #FFFFFF;
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 4px;
  box-shadow: 0 2px 8px rgba(216, 67, 21, 0.3);
  font-weight: 500;
  letter-spacing: 0.5px;
}

/* 卡片操作按钮 */
.card-actions {
  position: absolute;
  top: 12px;
  right: 12px;
  display: flex;
  gap: 8px;
}

.action-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-medium);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background-color: #FFFFFF;
}

.action-btn .iconfont {
  font-size: 16px;
}