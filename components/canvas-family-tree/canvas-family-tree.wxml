<!-- Canvas族谱树渲染器 -->
<view class="canvas-container">
  <!-- Canvas 2D 渲染器 -->
  <canvas 
    type="2d"
    id="canvas2dFamilyTree"
    canvas-id="canvas2dFamilyTree" 
    class="family-tree-canvas {{!webgl.enabled ? 'active' : 'inactive'}}"
    bindtouchstart="_onTouchStart"
    bindtouchmove="_onTouchMove"
    bindtouchend="_onTouchEnd"
    bindtap="_onCanvasTap"
    disable-scroll="true"
  ></canvas>
  
  <!-- WebGL 渲染器 -->
  <canvas 
    type="webgl"
    id="webglFamilyTree"
    canvas-id="webglFamilyTree" 
    class="family-tree-canvas {{webgl.enabled ? 'active' : 'inactive'}}"
    bindtouchstart="_onTouchStart"
    bindtouchmove="_onTouchMove"
    bindtouchend="_onTouchEnd"
    bindtap="_onCanvasTap"
    disable-scroll="true"
  ></canvas>
  
  <!-- 缩放指示器 -->
  <view class="scale-indicator {{data.showScaleIndicator ? 'show' : ''}}">
    <text>{{data.scalePercentage}}%</text>
  </view>
</view> 