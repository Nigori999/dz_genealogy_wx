/* Canvas族谱树渲染器样式 */
.canvas-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #f5f5f5;
  z-index: 1;
}

.family-tree-canvas {
  width: 100%;
  height: 100%;
  display: block;
  z-index: 1;
}

/* 缩放指示器 */
.scale-indicator {
  position: absolute;
  bottom: 20px;
  right: 20px;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 6px 10px;
  border-radius: 15px;
  font-size: 14px;
  opacity: 0;
  transform: translateY(10px);
  transition: all 0.3s ease;
  z-index: 10;
}

.scale-indicator.show {
  opacity: 1;
  transform: translateY(0);
} 