.node-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.node-avatar {
  position: relative;
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-bottom: 8px;
  overflow: hidden;
  background-color: var(--color-background);
}

.node-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 逝者徽章 */
.memorial-badge {
  position: absolute;
  top: 0;
  right: 0;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.memorial-badge::before {
  content: '';
  width: 12px;
  height: 2px;
  background-color: #FFFFFF;
  transform: rotate(45deg);
}

.memorial-badge::after {
  content: '';
  width: 12px;
  height: 2px;
  background-color: #FFFFFF;
  transform: rotate(-45deg);
}

.node-name {
  font-size: 14px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 4px;
  text-align: center;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.node-years {
  font-size: 12px;
  color: var(--color-text-light);
  text-align: center;
}