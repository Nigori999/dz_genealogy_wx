<!-- 树节点组件 -->
<view 
  class="tree-node {{node.member.gender}} {{direction}}" 
  style="left: {{node.x}}px; top: {{node.y}}px; width: {{node.width}}px; height: {{node.height}}px;"
  bindtap="onNodeTap"
>
  <view class="node-content">
    <view class="node-avatar">
      <image 
        src="{{node.member.avatar || (node.member.gender === 'male' ? '/images/avatar_male_default.png' : '/images/avatar_female_default.png')}}" 
        mode="aspectFill"
      ></image>
      <view wx:if="{{node.member.deathDate}}" class="memorial-badge"></view>
    </view>
    <view class="node-name">{{node.member.name}}</view>
    <view class="node-years">
      <text>{{formatBirthYear}}</text>
      <text wx:if="{{node.member.deathDate}}"> - {{formatDeathYear}}</text>
    </view>
  </view>
</view>