/**
 * 云族谱小程序通用样式类
 */

/* 内容块样式 */
.content-block {
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--color-text-dark);
  margin-bottom: 12px;
  padding-left: 8px;
  border-left: 3px solid var(--color-accent);
}

/* 列表样式 */
.list-item {
  display: flex;
  padding: 12px 16px;
  border-bottom: 1px solid var(--color-border);
  background-color: var(--color-white);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: var(--color-background);
}

/* 头像样式 */
.avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  background-color: var(--color-secondary);
  margin-right: 16px;
  position: relative;
  overflow: hidden;
}

.avatar-sm {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.avatar-lg {
  width: 80px;
  height: 80px;
  border-radius: 40px;
}

.avatar image {
  width: 100%;
  height: 100%;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.tag-primary {
  background-color: var(--color-primary-ultralight);
  color: var(--color-primary);
}

.tag-accent {
  background-color: rgba(216, 67, 21, 0.1);
  color: var(--color-accent);
}

/* 分割线样式 */
.divider {
  height: 1px;
  background-color: var(--color-border);
  margin: 16px 0;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 16px;
  text-align: center;
}

.empty-state-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-state-text {
  color: var(--color-text-light);
  font-size: 14px;
}

/* 加载状态样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
}

.loading-text {
  margin-left: 8px;
  color: var(--color-text-light);
  font-size: 14px;
}

/* 表单样式 */
.form-group {
  margin-bottom: 16px;
}

.form-label {
  font-size: 14px;
  color: var(--color-text-medium);
  margin-bottom: 8px;
  display: block;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 20px;
  padding: 8px 16px;
  margin-bottom: 16px;
  border: 1px solid rgba(255, 255, 255, 0.5);
}

.search-bar-light {
  background-color: var(--color-white);
  border: 1px solid var(--color-border);
}

.search-bar input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 14px;
  color: var(--color-text-medium);
}

/* 通知提示样式 */
.badge {
  display: inline-block;
  min-width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  border-radius: 10px;
  background-color: var(--color-accent);
  color: white;
  font-size: 12px;
  padding: 0 6px;
  font-weight: bold;
}

/* 按钮组样式 */
.btn-group {
  display: flex;
  margin: 16px 0;
}

.btn-group button {
  flex: 1;
  margin: 0 8px;
}

.btn-group button:first-child {
  margin-left: 0;
}

.btn-group button:last-child {
  margin-right: 0;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  bottom: 32px;
  right: 32px;
  width: 56px;
  height: 56px;
  border-radius: 28px;
  background-image: var(--gradient-button);
  box-shadow: var(--shadow-button);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24px;
  z-index: 100;
}

/* 网格布局 */
.grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8px;
}

.grid-item {
  width: calc(50% - 16px);
  margin: 8px;
}

.grid-item-3 {
  width: calc(33.333% - 16px);
  margin: 8px;
}

/* 媒体对象 */
.media {
  width: 100%;
  height: 0;
  padding-bottom: 56.25%; /* 16:9比例 */
  position: relative;
  overflow: hidden;
  border-radius: 8px;
  background-color: #f0f0f0;
  margin-bottom: 16px;
}

.media image,
.media video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}