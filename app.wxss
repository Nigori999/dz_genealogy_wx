/**
 * 云族谱小程序全局样式
 */

/* 引入主题样式 */
@import "./styles/theme.wxss";
@import "./styles/common.wxss";
@import "./styles/iconfont.wxss";

/* 页面通用样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, 
             "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB", 
             "Microsoft YaHei", sans-serif;
  font-size: 14px;
  line-height: 22px;
  color: #666666;
  background-color: #F8F5F2;
  box-sizing: border-box;
}

/* 容器通用样式 */
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 100vh;
  padding: 16px;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.card-header {
  background: linear-gradient(to right, #6D4C41, rgba(141, 110, 99, 0.7));
  padding: 12px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-title {
  color: #FFFFFF;
  font-size: 18px;
  font-weight: bold;
}

.card-content {
  padding: 16px 20px 20px;
}

/* 按钮通用样式 */
.btn-primary {
  background: linear-gradient(to right, #D84315, #FF7043);
  color: #FFFFFF;
  font-size: 14px;
  font-weight: bold;
  border-radius: 20px;
  padding: 10px 20px;
  box-shadow: 0 3px 6px rgba(216, 67, 21, 0.3);
  text-align: center;
}

.btn-secondary {
  background: transparent;
  color: #6D4C41;
  font-size: 14px;
  font-weight: normal;
  border: 1px solid #6D4C41;
  border-radius: 20px;
  padding: 9px 19px;
  text-align: center;
}

.btn-text {
  color: #8D6E63;
  font-size: 14px;
  font-weight: normal;
  background: transparent;
  padding: 0;
  line-height: normal;
  text-align: center;
}

/* 表单元素通用样式 */
.input-item {
  border: 1px solid #EEEEEE;
  border-radius: 8px;
  padding: 10px 16px;
  margin-bottom: 16px;
  font-size: 14px;
  color: #333333;
  background-color: #FFFFFF;
}

.input-item-label {
  font-size: 14px;
  color: #666666;
  margin-bottom: 8px;
}

/* 间距通用类 */
.mt-1 { margin-top: 8px; }
.mt-2 { margin-top: 16px; }
.mt-3 { margin-top: 24px; }
.mb-1 { margin-bottom: 8px; }
.mb-2 { margin-bottom: 16px; }
.mb-3 { margin-bottom: 24px; }
.ml-1 { margin-left: 8px; }
.ml-2 { margin-left: 16px; }
.mr-1 { margin-right: 8px; }
.mr-2 { margin-right: 16px; }

/* 字体大小通用类 */
.font-sm { font-size: 12px; }
.font-md { font-size: 14px; }
.font-lg { font-size: 16px; }
.font-xl { font-size: 18px; }
.font-xxl { font-size: 24px; }

/* 颜色通用类 */
.text-primary { color: #6D4C41; }
.text-secondary { color: #8D6E63; }
.text-accent { color: #D84315; }
.text-light { color: #999999; }
.text-dark { color: #333333; }
.text-white { color: #FFFFFF; }

/* 布局通用类 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-between { justify-content: space-between; }
.justify-center { justify-content: center; }
.flex-1 { flex: 1; }
.flex-wrap { flex-wrap: wrap; }

/* 图标通用类 */
.icon {
  width: 24px;
  height: 24px;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}